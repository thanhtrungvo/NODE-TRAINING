<%-include('../include/head.ejs')%>
<body>

    <%-include('../include/navigation.ejs')%>
    <main>
        <div class="container">
        <div class="row">
            <form class="product-form" action="/admin/product" method="POST" >

                <div class="input-group my-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">title</span>
                    </div>
                    <input type="text" aria-label="First name" name="title" class="form-control">
                </div>
                
                <div class="input-group my-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Image Url</span>
                    </div>
                    <input type="text" aria-label="First name" name="imgUrl" class="form-control">
                </div>
                

                <div class="input-group my-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Price</span>
                    </div>
                    <input type="number" aria-label="First name" name="price" class="form-control" step="0.01" >
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="description" ></textarea>
                </div>

         
                <button type="submit" class="btn btn-outline-success ml-5">Add Product</button>
            </form>
        </div>
        </div>
    </main>
</body>
</html>